@model WorkFlowStaff_WebApp.Models.Empleado

@{
    var modalTitle = Model.EmpleadoId == 0 ? "Crear Nuevo Empleado" : $"Editar: {Model.Nombre}";
    var buttonText = Model.EmpleadoId == 0 ? "Guardar Empleado" : "Guardar Cambios";
}

<div class="modal fade" id="createEditModal" tabindex="-1" aria-labelledby="createEditModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-soft">
            <div class="modal-header">
                <h5 class="modal-title" id="createEditModalLabel">@modalTitle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="createEditForm" asp-controller="Empleados" asp-action="Save" method="post">
                <div class="modal-body">
                    <input type="hidden" asp-for="EmpleadoId" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label"></label>
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Salario" class="form-label"></label>
                                <input asp-for="Salario" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Salario" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FechaInicio" class="form-label"></label>
                                <input asp-for="FechaInicio" class="form-control" type="date" />
                                <span asp-validation-for="FechaInicio" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DepartamentoId" class="form-label"></label>
                                <select asp-for="DepartamentoId" class="form-select" asp-items="ViewBag.DepartamentoId">
                                    <option value="">-- Seleccionar Departamento --</option>
                                </select>
                                <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="CargoId" class="form-label"></label>
                                <select asp-for="CargoId" class="form-select" asp-items="ViewBag.CargoId">
                                    <option value="">-- Seleccionar Cargo --</option>
                                </select>
                                <span asp-validation-for="CargoId" class="text-danger"></span>
                            </div>

                            <div class="mb-3 form-check mt-5">
                                <input class="form-check-input" asp-for="EstadoVigente" />
                                <label class="form-check-label" asp-for="EstadoVigente"></label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-accent">@buttonText</button>
                </div>
            </form>
        </div>
    </div>
</div>

