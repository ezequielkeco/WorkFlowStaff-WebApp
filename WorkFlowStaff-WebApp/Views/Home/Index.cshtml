@using WorkFlowStaff_WebApp.Models

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <h2 class="mb-5 text-primary">Resumen Ejecutivo del Personal</h2>

    <div class="row g-4">

        <div class="col-lg-2 col-md-4">
            <div class="card shadow-soft p-2 text-center">
                <p class="text-muted mb-1">Total de Empleados</p>
                <h1 class="text-accent fw-bold display-6">@ViewData["TotalEmpleados"]</h1>
                <p class="text-secondary small">Incluye activos e inactivos.</p>
            </div>
        </div>

        <div class="col-lg-2 col-md-6">
            <div class="card shadow-soft p-2 text-center">
                <p class="text-muted mb-1">Empleados Vigentes</p>
                <h1 class="text-accent fw-bold display-6">@ViewData["EmpleadosVigentes"]</h1>
                <p class="text-muted small">Personal actualmente activo.</p>
            </div>
        </div>

        <div class="col-lg-4 col-md-2">
            <div class="card shadow-soft p-3 text-center">
                <p class="text-muted mb-1">Nómina Mensual Total</p>
                <h2 class="text-accent fw-bold display-6">@ViewData["nominaTotal"]</h2>
                <p class="text-secondary small">Suma total de salarios de empleados vigentes.</p>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="card shadow-soft p-3 text-center">
                <p class="text-muted mb-1">Total de Departamentos</p>
                <h1 class="text-accent fw-bold display-6">@ViewData["TotalDepartamentos"]</h1>
                <p class="text-secondary small">Departamentos registrados.</p>
            </div>
        </div>

    </div>